<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<constant name="struts.devMode" value="true"></constant>
	<constant name="struts.serve.static.browserCache" value="false"></constant>
	
	<!-- <constant name="struts.objectFactory.spring.autoWire" value="type"></constant> -->
	<package name="default" extends="struts-default" namespace="/">
		<!-- 异常 -->
		<default-action-ref name="default-error" />
		<global-results>
			<result name="error">/error.jsp</result>
		</global-results>
		<global-exception-mappings>
			<exception-mapping result="error" exception="java.lang.Exception" />
		</global-exception-mappings>
		<action name="default-error">
			<result>/error.jsp</result>
		</action>

		<!-- 用户登录验证 -->
		<action name="login" class="com.min.action.SysEmployeeAction"
			method="login">
			<result type="redirect">/index.jsp</result>
			<result name="input">/login.jsp</result>
		</action>
		<!-- 添加报销表单 -->
		<action name="claimVoucher_saveClaimVoucher" class="com.min.action.BizClaimVoucheAction"
			method="addCvb">
			<result>/jsp/claim/claim_voucher_view.jsp</result>
			<result name="error">/error.jsp</result>
		</action>
		<!-- 查询 -->
		<action name="claimVoucher_getClaimVoucherById" class="com.min.action.BizClaimVoucheAction"
			method="getQuery">
			<result>/jsp/claim/claim_voucher_view.jsp</result>
			<result name="error">/error.jsp</result>
		</action>
		<!-- 审批 -->
		<action name="claimVoucher_toCheck" class="com.min.action.BizClaimVoucheAction"
			method="getQuery">
			<result>/jsp/claim/claim_voucher_check.jsp</result>
			<result name="error">/error.jsp</result>
		</action>
		<!-- 更新 -->
		<action name="claimVoucher_toUpdate" class="com.min.action.BizClaimVoucheAction"
			method="update">
			<result>/jsp/claim/claim_voucher_update.jsp</result>
			<result name="error">/error.jsp</result>
		</action>
		<!-- 查看报销单 -->
		<action name="claimVoucher_searchClaimVoucher" class="com.min.action.PageAction"
			method="execute">
			<result>/jsp/claim/claim_voucher_list.jsp</result>
			<result name="error">/error.jsp</result>
		</action>
		<!-- 图形验证码 -->
		<action name="random" class="com.min.action.RandomAction" method="execute">
			<result type="stream">
				<param name="contentType">image/jpeg</param>
				<param name="inputName">inputStream</param>
			</result>
		</action>
	</package>
</struts>    
